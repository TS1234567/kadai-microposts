
  <% if current_user.favorite?(micropost) %>
    <%= form_for(current_user.favorites.find_by(post_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :post_id, micropost.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :post_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
